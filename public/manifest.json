{
  "manifest_version": 3,
  "name": "Tab Zapper",
  "version": "0.1.0",
  "description": "Automatically close tabs you do not like (such as ad popups from video meetings).",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Tab Zapper",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "optional_permissions": ["tabs"],
  "optional_host_permissions": ["*://*/*"]
}